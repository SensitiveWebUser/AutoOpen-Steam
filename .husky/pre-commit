#!/usr/bin/env sh

# Check if there are staged changes (excluding package.json and manifest.json)
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep -v "package.json" | grep -v "src/manifest.json")

if [ -n "$STAGED_FILES" ]; then
    echo "ðŸ“¦ Changes detected, bumping minor version..."
    pnpm version minor --no-git-tag-version
    pnpm exec tsx scripts/version-bump.ts
    git add package.json src/manifest.json pnpm-lock.yaml
    echo "âœ… Version bumped and added to commit"
fi

