{
  "manifest_version": 3,
  "name": "AutoOpen Steam",
  "version": "1.5.0",
  "description": "Open Steam Workshop items in the Steam desktop app with a single click",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "AutoOpen Steam Settings"
  },
  "content_scripts": [
    {
      "matches": [
        "*://steamcommunity.com/sharedfiles/filedetails/*",
        "*://steamcommunity.com/workshop/filedetails/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ]
}
